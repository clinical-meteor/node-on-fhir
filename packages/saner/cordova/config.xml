    <icon src="resources/ios_notification_2x.icon.png" width="40" height="40"/>
    <icon src="resources/ios_notification_3x.icon.png" width="60" height="60"/>
    <icon src="resources/ipad.icon.png" width="76" height="76"/>
    <icon src="resources/ios_settings.icon.png" width="29" height="29"/>
    <icon src="resources/ios_spotlight.icon.png" width="40" height="40"/>
    <icon src="resources/ipad_app_legacy.icon.png" width="72" height="72"/>
